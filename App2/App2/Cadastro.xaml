<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Cadastro"
             Title="Cadastro">
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Nome:" />
                <Entry HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Telefone:" />
                <Entry HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            
            <StackLayout  Orientation="Horizontal">
                <Label Text="Email:" />
                <Entry HorizontalOptions="FillAndExpand"/>
            </StackLayout>

            <Button Text="Salvar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>